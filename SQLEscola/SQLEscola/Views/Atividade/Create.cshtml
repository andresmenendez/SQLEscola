@model SQLEscola.Models.AtividadeModel

@{
    ViewBag.Title = "Create";
}

<h2>Nova Atividade</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Criar Atividade</legend>

        <div class="editor-label">
            @Html.Label("Nome")
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Nome_Atividade, new { style = "width:400px", Maxlength = "100" })
            @Html.ValidationMessageFor(model => model.Nome_Atividade)
        </div>

        <p>
            <input type="submit" value="Criar Atividade" class="but but-success but-small but-shadow but-rc" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Retornar", "Index")
</div>
