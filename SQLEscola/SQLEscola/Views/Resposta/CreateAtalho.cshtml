@model SQLEscola.Models.RespostaModel

@{
    ViewBag.Title = "Responder Questão";
}

<h2>Responder Questão</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Resposta</legend>

        @using (Ajax.BeginForm("CreateAtalho", "Resposta", FormMethod.Get, null))
        {
            <div class="editor-label">
                @Html.Label("Turma")
            </div>
            <div class="editor-field">
                @Html.DropDownList("Turmas", null, "Selecione", new { onchange = "this.form.submit();", id = "ddlTurmas" })
            </div>
        }

        @using (Ajax.BeginForm("CreateAtalho", "Resposta", FormMethod.Get, null))
        {
            <div class="editor-label">
                @Html.Label("Atividade")
            </div>
            <div class="editor-field">
                @Html.DropDownList("Atividades", null, "Selecione", new { onchange = "this.form.submit();" })
            </div>
        }

        @using (Ajax.BeginForm("CreateAtalho", "Resposta", FormMethod.Get, null))
        {
            <div class="editor-label">
                @Html.Label("Questão")
            </div>
            <div class="editor-field">
                @Html.DropDownList("Questoes", null, "Selecione", new { onchange = "this.form.submit();" })
            </div>
        }

        @if (ViewBag.SelecionouQuestao == "true")
        {
            <div class="editor-label">
                @Html.Label("Descrição da Questão Selecionada")
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(model => model.ScriptResposta, new { style = "width:700px;height:250px;", disabled = "disabled" })
            </div>
            <br />
            @Html.ActionLink("Responder", "Create", "Resposta", new { id = Model.Id_Questao },
              new
              {
                  @class = "but but-primary but-small but-shadow but-rc",
                  style = "color:White;font-size:larger;text-decoration:none;",
                  id = "bt"
              })
        }

