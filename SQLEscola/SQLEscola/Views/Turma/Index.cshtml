@model IEnumerable<SQLEscola.Models.TurmaModel>

@{
    ViewBag.Title = "Turmas";
}

<h2>Turma</h2>

<p>
    @Html.ActionLink("Criar Nova Turma", "Create")
    &nbsp &nbsp
    @Html.ActionLink("Minhas Turmas", "Index")
</p>
<table>
    <tr>
        <th>
            Nome da Turma
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Turma)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id_Turma }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.Id_Turma }) |
            @Html.ActionLink("Remover", "Delete", new { id=item.Id_Turma })
        </td>
    </tr>
}

</table>
