@model SQLEscola.Models.ResultadoModel

@{
    ViewBag.Title = "Fazer Comentário";
}

<h2>Fazer Comentário</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Comentar Resultado</legend>

        @Html.HiddenFor(model => model.Id_Resultado)
        @Html.HiddenFor(model => model.Id_Resposta)
        @Html.HiddenFor(model => model.Resultados)

        <div class="editor-label">
            @Html.Label("Script de Resposta")
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.ScriptResposta, new { style = "width:750px;height:350px;", disabled = "disabled" })
        </div>

        <div class="editor-label">
            @Html.Label("Resultado")
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Resultados, new { style = "width:750px;height:350px;", disabled = "disabled" })
        </div>

        <div class="editor-label">
            @Html.Label("Comentários do Professor")
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Comentarios_Prof, new { style = "width:550px;height:150px;"})
        </div>

        <p>
            <input type="submit" value="Comentar" class="but but-success but-small but-shadow but-rc" style="font-size:20px;" />
            &nbsp &nbsp
            @Html.ActionLink("Cancelar", "Index", "Resposta", new { id = ViewBag.Id_Questao, idUser = ViewBag.IdUser },
      new { style = "color:white;text-decoration:none;font-size:16px;", Class = "but but-error but-shadow but-rc" })
            
        </p>

        
    </fieldset>
}


