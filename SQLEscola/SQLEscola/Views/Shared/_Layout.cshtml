<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <script src="@Url.Content("~/Scripts/jquery.min.js")" type="text/javascript"> </script>
	<link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" type="text/css" />
	<script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"> </script>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>

    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js" />
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>

</head>
<body>
    <div class="page">
        <div id="header">
            <div id="title">
                <h1><img alt="logo" src="../../Content/themes/base/images/sql.jpg" width="70px" height="50px" /> Escola &nbsp &nbsp</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <div id="menucontainer">
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    @if (HttpContext.Current.Request.IsAuthenticated)
                    {
                        if (Session["Perfil"] == "Administrador")
                        {
                            <li>@Html.ActionLink("Ativar Professores", "IndexAdm", "AtivarPerfil")</li> 
                        }
                        else if (Session["Perfil"] == "Professor")
                        {
                            <li>@Html.ActionLink("Turmas", "Index", "Turma")</li>
                            <li>@Html.ActionLink("Minhas Turmas", "FiltrarPorUser", "Turma")</li>
                            <li>@Html.ActionLink("Alternar Perfil", "SelecionarPerfil", "AtivarPerfil")</li> 
                        }
                        else if (Session["TemPerfilPro"] == "True" & Session["Perfil"] == "Usuário")
                        {
                            <li>@Html.ActionLink("Turmas", "IndexAluno", "Turma")</li>
                            <li>@Html.ActionLink("Responder Questão", "CreateAtalho", "Resposta")</li>
                            <li>@Html.ActionLink("Alternar Perfil", "SelecionarPerfil", "AtivarPerfil")</li> 
                        }
                        else if (Session["Perfil"] == "Usuário")
                        {
                            <li>@Html.ActionLink("Turmas", "IndexAluno", "Turma")</li>
                            <li>@Html.ActionLink("Responder Questão", "CreateAtalho", "Resposta")</li>
                            <li>@Html.ActionLink("Solicitar Perfil de Professor", "Index", "AtivarPerfil")</li> 
                        }
                    }
                    <li>@Html.ActionLink("Sobre", "About", "Home")</li>
                </ul>
            </div>
        </div>
        <div id="main">
            @RenderBody()
        </div>
        <div id="footer">
        </div>
    </div>
</body>
</html>
