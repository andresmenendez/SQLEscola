@model SQLEscola.Models.QuestaoModel

@{
    ViewBag.Title = "Remover";
}

<h2>Remover</h2>

<h3>Tem certeza que deseja remover esta questão?</h3>
<fieldset>
    <legend>Atividade</legend>

    <div class="display-label">Descrição da Questão</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Descricao)
    </div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <p>
            <input type="submit" value="Remover" class="but but-error but-small but-shadow but-rc" />
        </p>
        @Html.ActionLink("Voltar", "Index", new { id = Model.Id_Atividade })
    </p>
}
